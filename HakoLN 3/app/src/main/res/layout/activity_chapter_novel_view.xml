<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imagePoster"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#cfcfcb"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/txtTitleVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tilte Volume "

                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/holo_blue_light"/>

            <TextView
                android:id="@+id/txtTitleParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title Parent"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2b5cfd"
                android:text="https://ln.hako.re/"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Danh sách chương:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listChapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" />
    </LinearLayout>
</LinearLayout>